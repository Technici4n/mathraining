<% provide(:title, 'Modifier un chapitre') %>
<h1>Modifier un chapitre</h1>

<div class="row">
  <div class="span12">
    <%= form_for(@chapter) do |f| %>
      <%= render 'fields', f: f %>
      <br />
      <%= f.submit "Editer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<center><%= link_to 'Retour au chapitre', chapter_path(@chapter) %></center>


<script>
Preview.Init();
Preview.Update();
</script>
