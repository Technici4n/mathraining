<% provide(:title, 'Créer un chapitre') %>

<h1>
<span style="font-size:16px;"><%= link_to "Cours", sections_path %> ></span>
<span style="font-size:24px;"><%= link_to @section.name, @section %> ></span>
Créer un chapitre
</h1>

<div class="row">
  <div class="span12">
    <%= form_for(@chapter, url: section_chapters_path) do |f| %>
      <%= render 'form', f: f %>
      <br />
      <%= f.submit "Ajouter", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<script>
Preview.Init();
Preview.Update();
</script>
