<% provide(:title, 'Modifier un point théorique') %>
<h1>Modifier un point théorique</h1>

<div class="row">
  <div class="span6">
    <%= form_for(@theory) do |f| %>
      <%= render 'fields', f: f %>
      <br />
      <%= f.submit "Editer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  <div class="span6">
    <h2>Preview</h2>
    <p id="preview">
    </p>
  </div>
</div>

<center><%= link_to 'Retour au chapitre', @theory.chapter %></center>
