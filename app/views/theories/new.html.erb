<%= javascript_include_tag 'preview.js' %>
<%= javascript_include_tag 'tainsert.js' %>

<% provide(:title, 'Créer un point théorique') %>
<h1>Créer un point théorique</h1>

<div class="column">
  <div class="span12" style="padding-bottom:10px; margin-bottom:20px; border-bottom: 1px solid black;">
    <h3> Preview </h3>
    <div id="MathPreview"></div>
    <div id="MathBuffer" style="visibility:hidden; position:absolute; top:0; left: 0"></div>
  </div>
  <div class="span12">
    <%= form_for(@theory, url: chapter_theories_path) do |f| %>
      <%= render 'form', f: f %>
      <br />
      <%= f.submit "Créer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<br/>
<center><%= link_to 'Retour au chapitre', @chapter %></center>

<script>
Preview.Init();
</script>
