<% provide(:title, "Notifications") %>
<h1>
  <% if @new %>
    Toutes les soumissions
  <% else %>
    Soumissions auxquelles vous participez
  <% end %>
</h1>

<center>
  <%= will_paginate @notifications, :style => "margin-top:-10px;", :class => "hidden-xs" %>
  <%= will_paginate @notifications, :style => "margin-top:-10px;", :class => "visible-xs", :previous_label => "Préc.", :next_label => "Suiv." %>
</center>

<div class="row">
<div class="col-xs-12 col-sm-8 col-md-8 col-lg-9">
<table class="table table-bordered">
<tr><th class="hidden-xs" style="text-align:center;">Statut</th><th class="hidden-xs">Date de la soumission</th><th>Dernière activité</th><th>Qui</th><th></th></tr>
<% @notifications.each do |n| %>
  <%= render 'submissions/show2', s: n, nom: true %>
<% end %>
</table>
</div>
<div class="hidden-xs col-sm-1 col-md-1 col-lg-1"></div>
<div class="col-xs-12 col-sm-3 col-md-3 col-lg-2">
<table class="table table-bordered" style="width:200px;">
<tr><th>Légende</th></tr>
<tr class="warning"><td>
<% if @new %>
Nouvelle soumission
<% else %>
Commentaire non-lu
<% end %>
</td></tr>
<tr class="info"><td>
<% if @new %>
Nouveau commentaire
<% else %>
Commentaire lu
<% end %>
</td></tr>
<tr class="success"><td>Soumission correcte</td></tr>
<tr class="danger"><td>Soumission erronée</td></tr>
</table>
</div>
</div>

<center>
  <%= will_paginate @notifications, :style => "margin-top:-10px;", :class => "hidden-xs" %>
  <%= will_paginate @notifications, :style => "margin-top:-10px;", :class => "visible-xs", :previous_label => "Préc.", :next_label => "Suiv." %>
</center>

