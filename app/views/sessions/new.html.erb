<% provide(:title, "Connexion") %>
<h1>Connexion</h1>

<div class="row">
	<div class="span6">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password, "Mot de passe" %>
			<%= f.password_field :password %>

            <br />
			<%= f.submit "Connexion", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>Pas encore inscrit? <%= link_to "Inscrivez-vous", signup_path %> maintenant!</p>
	</div>
</div>
