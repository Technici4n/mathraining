<% provide(:title, 'Modifier un QCM') %>
<h1>Modifier un QCM</h1>

<div class="row">
  <div class="span12">
    <%= form_for(@qcm) do |f| %>
      <%= render 'fields2', f: f %>
      <br />
      <%= f.submit "Editer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<center><%= link_to 'Retour au chapitre', chapter_path(@qcm.chapter, :type => 3, :which => @qcm.id) %></center>

<script>
Preview.Init();
Preview.Update();
</script>
