<% provide(:title, 'Créer un problème') %>

<h1>
<span style="font-size:16px;">Cours ></span>
<span style="font-size:24px;"><%= link_to @section.name, pb_sections_path(@section) %> ></span>
Créer un problème
</h1>

<div class="row">
  <div class="span12">
    <%= form_for(@problem, url: section_problems_path) do |f| %>
      <%= render 'form', f: f %>
      <br />
      <%= f.submit "Créer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<script>
Preview.Init();
Preview.Update();
</script>
