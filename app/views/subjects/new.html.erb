<% if @chapter.nil? %>
  <% quoi = @subject %>
<% else %>
  <% quoi = [@chapter, @subject] %>
<% end %>
    
<%= form_for quoi, :html => { :multipart => true } do |f| %>
  <%= render 'form', f: f %>
  <br />
  <span id="fooBar"></span>
  <br/>
  <input type="button" value="Ajouter une pièce jointe" onclick="add()"/>
  <br /><br/>
  <%= f.submit "Créer", class: "btn btn-large btn-primary" %>
<% end %>

