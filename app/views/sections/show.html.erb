    <tr style="background-color:#DDFFDD;">
  <% else %>
    <table style="border:1px solid black;" class="table">
    <tr style="background-color:#FFFFE0;">
    <td colspan="3" style="border-top:1px solid black;"><center><h3><%= link_to chap[encours].name, chap[encours] %> <%= "(en construction)" if !chap[encours].online %></h3></center></td>
    </tr>
    <tr style="background-color:#FFFFE0;">
  <% end %>
  
  <td class="span4">
  <center><h4>Théorie</h4></center>
  <ul>
  <% chap[encours].theories.each do |t| %>
    <% if t.online %>
      <li><%= link_to t.title, chapter_path(chap[encours], :type => 1, :which => t.id) %></li>
