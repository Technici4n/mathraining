  <% debloque[encours].each do |d| %>
    <% nb_pre[d] = nb_pre[d] - 1 %>
    <% faisable[d] = [faisable[d], faisable[encours]+1].max %>
    <% if nb_pre[d] == 0 %>
      <% possible.add([faisable[d], chap[d].level, d]) %>
    <% end %>
  <% end %>
  <% i = i+1 %>
