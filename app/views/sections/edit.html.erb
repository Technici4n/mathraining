<% provide(:title, "Editer une section") %> 
<h1>Editer une section</h1>

<div class="row">
  <div class="span6">
    <%= form_for(@section) do |f| %>
      <%= render 'fields', f: f %>
      <br />
      <%= f.submit "Editer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Retour', sections_path %>
