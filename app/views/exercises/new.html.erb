<% provide(:title, 'Créer un exercice') %>

<h1>
<span style="font-size:16px;"><%= link_to "Cours", sections_path %> ></span>
<span style="font-size:24px;"><%= link_to @chapter.section.name, @chapter.section %> ></span>
<span style="font-size:32px;"><%= link_to @chapter.name, @chapter %> ></span>
Créer un exercice
</h1>

<div class="row">
  <div class="span12">
    <%= form_for(@exercise, url: chapter_exercises_path) do |f| %>
      <%= render 'form', f: f %>
      <br />
      <%= f.submit "Créer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<script>
Preview.Init();
Preview.Update();
</script>
